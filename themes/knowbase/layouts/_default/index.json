{{- $papers := where site.RegularPages "Section" "papers" -}}
[{{ range $i, $p := $papers }}{{ if $i }},{{ end }}
  {
    "title": {{ $p.Title | jsonify }},
    "url": {{ $p.RelPermalink | jsonify }},
    "date": {{ ($p.Date.Format "Jan 2, 2006") | jsonify }},
    "summary": {{ with $p.Params.one_line_summary }}{{ . | jsonify }}{{ else }}""{{ end }},
    "tags": {{ with $p.Params.tags }}{{ . | jsonify }}{{ else }}[]{{ end }}
  }
{{- end }}]
